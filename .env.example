# Environment Variables for Data Quality Dashboard

# Backend Configuration
PYTHONUNBUFFERED=1

# API Authentication
# Generate a secure random key for production
# This must be set in both backend/.env and frontend/.env
API_KEY=your-api-key-here

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_API_KEY=your-api-key-here

# Database Configuration
# Set to True to reset database on every backend restart (DEVELOPMENT ONLY!)
# This is configured in backend/database.py
# DEVELOPMENT=False

# Docker Configuration
# Frontend port mapping (host:container)
FRONTEND_PORT=3000:80

# Backend port mapping (host:container)
BACKEND_PORT=8000:8000
